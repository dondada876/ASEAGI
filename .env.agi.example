# AGI Protocol Environment Variables
# Copy this file to .env and fill in your actual values
# These variables are IN ADDITION to the standard ASEAGI .env file

# ============================================================================
# SHARED WITH PROJ344 (use same values from main .env)
# ============================================================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================================================
# AGI PROTOCOL SPECIFIC
# ============================================================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook  # For production
TELEGRAM_ADMIN_USER_ID=your_telegram_user_id  # Optional: restrict to specific user

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4  # Number of uvicorn workers

# Security
API_SECRET_KEY=generate_a_random_secret_key_here  # For JWT tokens
API_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false  # Set to true to enable caching

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/app/logs/agi-protocol.log

# Feature Flags
ENABLE_TELEGRAM_BOT=true
ENABLE_API_DOCS=true  # Swagger UI at /docs
ENABLE_WEBHOOK=false  # Set to true for production webhook mode

# ============================================================================
# DEVELOPMENT vs PRODUCTION
# ============================================================================

# Development (local)
# TELEGRAM_POLLING_MODE=true
# API_RELOAD=true

# Production (deployed)
# TELEGRAM_POLLING_MODE=false
# API_RELOAD=false
# TELEGRAM_WEBHOOK_URL=https://your-production-domain.com/telegram/webhook

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit the actual .env file with real credentials
# 2. Use the same SUPABASE_URL and SUPABASE_KEY as PROJ344
# 3. Get TELEGRAM_BOT_TOKEN from @BotFather on Telegram
# 4. Generate API_SECRET_KEY with: openssl rand -hex 32
